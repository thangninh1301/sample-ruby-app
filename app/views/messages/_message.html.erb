<% if current_user == message.user %>
  <div class="message-box-holder">
    <div class="message-box">
      <%= message.content %>
      <div><%= render 'messages/photos', message: message %></div>
    </div>
  </div>
<% else %>
  <div class="message-box-holder">
    <div class="message-sender">
      <%= message.user.name %>
    </div>
    <div class="message-box message-partner">
      <%= message.content %>
      <div><%= render 'messages/photos', message: message %></div>
    </div>
  </div>
<% end %>
