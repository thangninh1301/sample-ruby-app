<% comment||=@comment #khi su dung aajx ajax %>
<%= form_with(url: comments_path, remote: true) do |f| %>
  <%= f.text_field :content, id: 'text-field-cmt-'+comment.id.to_s %>
  <%= f.hidden_field :parent_comment_id, value: comment.id %>
  <%= f.hidden_field :micropost_id, value: @micropost.id %>
  <%= f.submit class: "hiden-btn" %>
<% end %>
