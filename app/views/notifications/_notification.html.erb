<a class="content" href="/page.html">
  <% user_create_action = user_create_action(notification) %>
  <div class="notification-item">
    <%= link_to gravatar_for(user_create_action, size: 50), user_create_action %>
    <span class="user"><%= link_to user_create_action.name, user_create_action %></span>
    <span class="content"> <%= " had #{notification.source_type.downcase} you" %></span>
    <div>
      <span><%= time_ago_in_words(notification.source.created_at) %> ago.</span>
      <span class="notification-seen-btn"><%= render 'notifications/seen_button', notification: notification %></span>
    </div>
    <h4 class="item-title"><%= link_to notification.source_type, notification %></h4>
    <p class="item-info"><%= item_info(notification) %></p>
  </div>
</a>

